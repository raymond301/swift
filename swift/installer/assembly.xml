<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>install</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>swift-3.5</baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>bin/swift</outputDirectory>
            <excludes>
                <exclude>edu.mayo.mprc:swift-scripts:jar:3.5-SNAPSHOT</exclude>
                <exclude>edu.mayo.mprc:install:jar:3.5-SNAPSHOT</exclude>
                <exclude>edu.mayo.mprc:install-exe:jar:3.5-SNAPSHOT</exclude>
                <!-- Exclude the pom from the transitive war dependency collection -->
                <exclude>edu.mayo.mprc:swift-web:pom:3.5-SNAPSHOT</exclude>
            </excludes>
            <unpackOptions>
                <excludes>
                    <exclude>**/META-INF</exclude>
                    <exclude>**/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory></outputDirectory>
            <includes>
                <include>edu.mayo.mprc:swift-scripts:jar:3.5-SNAPSHOT</include>
                <include>edu.mayo.mprc:install-exe:jar:3.5-SNAPSHOT</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>**/META-INF</exclude>
                    <exclude>**/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory></outputDirectory>
            <includes>
                <include>edu.mayo.mprc:install:jar:3.5-SNAPSHOT</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>**/META-INF</exclude>
                    <exclude>**/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>
